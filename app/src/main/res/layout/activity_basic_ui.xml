<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".basicui.BasicUIActivity">

    <EditText
            android:id="@+id/edtText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Enter Text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="44dp" app:layout_constraintBottom_toTopOf="@+id/recyclerView"/>

    <TextView
            android:id="@+id/txtSubmit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:gravity="center"
            android:padding="5dip"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:background="@color/colorPrimary"
            app:layout_constraintTop_toTopOf="@+id/edtText" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="44dp"
            app:layout_constraintHorizontal_bias="0.0"/>

    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recyclerView"
            app:layout_constraintTop_toBottomOf="@+id/txtSubmit"
            />

</android.support.constraint.ConstraintLayout>